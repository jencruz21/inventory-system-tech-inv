<%- include('include/header.ejs') %>
<div class="container">
    <div class="col-md mb-5">
        <h1 class="text-center m-5">
            Edit Category
        </h1>
        <form method="POST" action="/inventory/categories/update/<%= category._id %>">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="category_name" id="category_name" placeholder="name" required value="<%= category.category_name %>">
                <label for="category_name">Edit Category</label>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Update Category">
            </div>
        </form>
    </div>
</div>
<%- include('include/footer.ejs') %>
