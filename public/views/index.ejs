<%- include('include/header.ejs') %>
<!-- Table -->
<div class="container">
    <div>
        <h1 class="text-center m-5">Inventory System</h1>
    </div>
    <div class="d-flex flex-wrap justify-content-evenly">
        <% if (categories) { %>
            <% categories.forEach(category => { %>
                <a style="color:black;text-decoration:none" href="/inventory/items/category/<%= category._id %>">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4 align-self-center">
                                <img src="https://cdn.dribbble.com/users/1230/screenshots/1043765/media/8bb5485d8cff87f3bb6041b4a18d17c9.png?compress=1&resize=800x600&vertical=top" 
                                    class="img-fluid rounded-start" 
                                    alt="Category">
                            </div>
                            <div class="col-md-8 align-self-center">
                                <div class="card-body">
                                <h1 class="card-title text-center"><%= category.category_name %></h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        <% } else { %>
            No Categories Available
        <% } %>
    </div> 
</div>
<%- include('include/footer.ejs') %>