<%- include('include/header.ejs') %>
<div class="container">
    <div class="col-md">
        <h1 class="text-center m-5">
            Edit Item
        </h1>
        <form method="POST" action="/inventory/items/update/<%= item._id %>">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="item_name" id="item_name" placeholder="name" required value="<%= item.item_name %>">
                <label for="item_name">Item Name</label>
            </div>
            <div class="form-floating mb-3">
                <select name="category" id="category" class="form-control">
                    <option selected disabled>SELECT CATEGORY</option>
                    <% if (categories) { %>
                        <% categories.forEach(category => { %>
                            <% if (item.category === category._id) { %>
                                <option value="<%= category._id %>"><%= category.category_name %></option>
                            <% } else { %>
                                <option selected value="<%= category._id %>"><%= category.category_name %></option>
                            <% } %>
                        <% }) %>
                    <% } else { %>
                    
                    <% } %>
                </select>
                <label for="category">Category</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="number" name="price" id="price" required placeholder="price" value="<%= item.price %>">
                <label for="price">Price</label>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add Category">
            </div>
        </form>
    </div>
</div>
<%- include('include/footer.ejs') %>